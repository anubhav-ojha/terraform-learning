{
  "name": "Terraform + AWS CLI Dev Environment",
  "features": {
    "ghcr.io/devcontainers/features/terraform:latest": {},
    "ghcr.io/devcontainers/features/aws-cli:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "amazonwebservices.aws-toolkit-vscode"
      ]
    }
  },
  "postCreateCommand": "terraform -version && aws --version"
}
